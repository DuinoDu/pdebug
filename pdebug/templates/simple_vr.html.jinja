<script type="module">
import * as THREE from 'https://unpkg.com/three@0.126.0/build/three.module.js';
import { VRButton } from 'https://unpkg.com/three@0.126.0/examples/jsm/webxr/VRButton.js';
// import * as THREE from '/static/js/three/jsm/three.module.js';
// import { VRButton } from '/static/js/three/jsm/VRButton.js';

let camera, scene, renderer;

//创建场景 
scene = new THREE.Scene();
scene.background = new THREE.Color( 0x707070 );
scene.scale.set({{scale}}, {{scale}}, {{scale}});

//设置相机（视野，显示口的宽高比，近裁剪面，远裁剪面） 
camera = new THREE.PerspectiveCamera( 75, window.innerWidth/window.innerHeight, 0.1, 1000 ); 
camera.position.x = 5; 
camera.position.y = 5; 
camera.position.z = 5; 

//渲染器 
renderer = new THREE.WebGLRenderer( { antialias: true } );
renderer.setPixelRatio( window.devicePixelRatio );
renderer.setSize( window.innerWidth, window.innerHeight );
renderer.outputEncoding = THREE.sRGBEncoding;
renderer.xr.enabled = true;

//

document.body.appendChild( renderer.domElement ); 
document.body.appendChild( VRButton.createButton( renderer ) );

var axes = new THREE.AxesHelper(100);
scene.add( axes );

{{js_code}}

function animate() {
	renderer.setAnimationLoop( render );
}

function render() {
    renderer.render( scene, camera );
}

animate();

</script>

